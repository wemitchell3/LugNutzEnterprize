@model LugNutzPremium.Models.WishList

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>WishList</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateConfirmed">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @*<div class="form-group">
                <label asp-for="VehicleId" class="control-label"></label>
                <input asp-for="VehicleId" class="form-control" />
                <span asp-validation-for="VehicleId" class="text-danger"></span>
                </div>*@
            <div class="form-group">
                <label class="control-label">Vehicle</label>
                @Html.DropDownList("VehicleId", Model.VehicleSelectList, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label asp-for="WishListTitle" class="control-label"></label>
                <input asp-for="WishListTitle" class="form-control" />
                <span asp-validation-for="WishListTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WishListDescription" class="control-label"></label>
                <input asp-for="WishListDescription" class="form-control" />
                <span asp-validation-for="WishListDescription" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsComplete" /> @Html.DisplayNameFor(model => model.IsComplete)
                </label>
            </div>
            @Html.HiddenFor(model => model.CreatedDate)
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-primary">Cancel</a>
            </div>
        </form>
    </div>
</div>