@model IEnumerable<LugNutzEnterprize.Models.MaintenanceTask>

@{
    ViewData["Title"] = "Index";
}

<h1>Maintenance Tasks</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create Task</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MaintenanceTaskTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaintenanceTaskDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TaskDueAtMileage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsComplete)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateCreated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TargetCompleteDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaintenanceTaskTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaintenanceTaskDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TaskDueAtMileage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsComplete)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateCreated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TargetCompleteDate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MaintenanceTaskId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MaintenanceTaskId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MaintenanceTaskId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
